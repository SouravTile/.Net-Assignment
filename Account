Q2)
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace TaskD3
{
    internal class Program
    {
        class Student
        {
            string name;
            int id=0;
            double balance;
            public Student(string n)
            {
                ++id;
                name = n;
            }
            public void Deposit(int amt)
            {
                balance = balance + amt;
            }
            public void withdraw(int amt)
            {
                balance = balance - amt;
            }
            public void display()
            {
                Console.WriteLine(name);
                Console.WriteLine(balance);
            }
        }
            public static void Main(string[] args)
        {
            Student s1 = new Student("Sourav_Tile");
            s1.Deposit(100000);
            s1.withdraw(500);
            s1.display();
            Console.ReadLine();

            Student s2 = new Student("Rutuja kotwal");
            s2.Deposit(300);
            s2.withdraw(150);
            s2.display();
            Console.ReadLine();
        } 
    }
}

